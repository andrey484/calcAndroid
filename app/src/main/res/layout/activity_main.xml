<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrey.kal.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="C"
        android:id="@+id/erase"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="0"
        android:id="@+id/zero"
        android:layout_alignTop="@+id/erase"
        android:layout_toRightOf="@+id/erase"
        android:layout_toEndOf="@+id/erase"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="."
        android:id="@+id/point"
        android:layout_alignTop="@+id/zero"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="*"
        android:id="@+id/mool"
        android:layout_alignTop="@+id/point"
        android:layout_toRightOf="@+id/point"
        android:layout_toEndOf="@+id/point"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="7"
        android:id="@+id/seven"
        android:layout_above="@+id/erase"
        android:layout_toLeftOf="@+id/zero"
        android:layout_toStartOf="@+id/zero"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="8"
        android:id="@+id/eight"
        android:layout_above="@+id/zero"
        android:layout_toRightOf="@+id/erase"
        android:layout_toEndOf="@+id/erase"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="9"
        android:id="@+id/nine"
        android:layout_alignTop="@+id/eight"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="/"
        android:id="@+id/div"
        android:layout_alignTop="@+id/nine"
        android:layout_alignLeft="@+id/mool"
        android:layout_alignStart="@+id/mool"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="4"
        android:id="@+id/four"
        android:layout_above="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="5"
        android:id="@+id/five"
        android:layout_alignTop="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="-"
        android:id="@+id/minus"
        android:layout_above="@+id/nine"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="1"
        android:id="@+id/one"
        android:layout_above="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="2"
        android:id="@+id/two"
        android:layout_alignTop="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="3"
        android:id="@+id/three"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="+"
        android:id="@+id/plus"
        android:layout_alignTop="@+id/three"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="="
        android:id="@+id/equal"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:id="@+id/result"
        android:layout_above="@+id/one"
        android:layout_alignRight="@+id/three"
        android:layout_alignEnd="@+id/three"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
